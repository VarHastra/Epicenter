<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    app:key="@string/prefs_app_settings">

    <PreferenceCategory app:title="@string/pref_general">

        <ListPreference
            app:key="@string/pref_units_key"
            app:title="@string/pref_units"
            app:entries="@array/pref_units_entries"
            app:entryValues="@array/pref_units_values"
            app:defaultValue="0"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>