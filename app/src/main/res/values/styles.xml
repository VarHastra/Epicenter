<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>

        <item name="android:statusBarColor">?colorSurface</item>
        
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    
    <style name="AppTheme.Gentle" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryGentle</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryGentleVariant</item>
    </style>

    <style name="AppTheme.TranslucentStatus" parent="AppTheme">
        <item name="android:statusBarColor">?colorSurface</item>
    </style>

    <style name="SnackbarStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="actionTextColorAlpha">1.0</item>
        <item name="android:backgroundTint">@color/colorSnackbar</item>
    </style>

    <style name="SelectableChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/bg_chip</item>
        <item name="android:textColor">@color/text_chip</item>
        <item name="chipIconTint">@color/text_chip</item>
        <item name="checkedIcon">@null</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ClusterIconTextAppearance">
        <item name="android:textColor">#80000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
