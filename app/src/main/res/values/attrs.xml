<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="title" format="string" />
    <attr name="icon" format="reference" />
    <attr name="iconTint" format="color" />
    <attr name="iconAlpha" format="float" />
    <attr name="text" format="string" />

    <declare-styleable name="ToolbarDropdown">
        <attr name="titleText" format="string" />
        <attr name="dropDownText" format="string" />
        <attr name="displayDropdown" format="boolean" />
    </declare-styleable>

    <declare-styleable name="EmptyView">
        <attr name="text" />
        <attr name="captionText" format="string" />
        <attr name="image" format="reference" />
        <attr name="buttonVisibility" format="boolean" />
        <attr name="buttonText" format="string" />
    </declare-styleable>

    <declare-styleable name="TileView">
        <attr name="text" />
        <attr name="title" />
        <attr name="icon" />
    </declare-styleable>

    <declare-styleable name="TileTwolineView">
        <attr name="textFirstLine" format="string" />
        <attr name="textSecondLine" format="string" />
        <attr name="title" />
        <attr name="icon" />
    </declare-styleable>
</resources>