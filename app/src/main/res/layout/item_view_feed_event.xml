<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item_three_line"
    android:background="@drawable/bg_surface_clickable"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/magnitudeTextView"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="30sp"
        tools:textColor="?attr/colorAlert5"
        tools:text="5.6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/spacing_2x"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTextView"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="62 mi S of San Francisco Del Mar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/distanceTextView"
                style="@style/TextAppearance.MaterialComponents.Body2.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_1x"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Distance: 3453 mi" />

            <ImageView
                android:id="@+id/tsunamiIconImgView"
                android:layout_width="@dimen/size_icon_small"
                android:layout_height="@dimen/size_icon_small"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_tsunami" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/depthTextView"
                style="@style/TextAppearance.MaterialComponents.Body2.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_1x"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Depth: 15 mi" />

            <TextView
                android:id="@+id/dateTextView"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                tools:text="Today at 9:10 AM" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>