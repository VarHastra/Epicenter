<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_empty_view"
        android:layout_width="@dimen/size_icon_empty_view"
        android:layout_height="@dimen/size_icon_empty_view"
        tools:src="@drawable/ic_error_cloud_off_24dp" />

    <TextView
        android:id="@+id/tv_empty_view_title"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_2x"
        android:gravity="center_horizontal"
        tools:text="@string/empty_view_connection_title" />

    <TextView
        android:id="@+id/tv_empty_view_caption"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_1x"
        android:gravity="center_horizontal"
        tools:text="@string/empty_view_connection_body" />

    <Button
        android:id="@+id/btn_empty_view"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_1x"
        android:visibility="gone"
        tools:text="Retry"
        tools:visibility="visible" />
</LinearLayout>