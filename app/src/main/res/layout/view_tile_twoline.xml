<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:background="@drawable/bg_surface_clickable"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_tile_icon"
        android:layout_width="@dimen/size_icon_normal"
        android:layout_height="@dimen/size_icon_normal"
        android:layout_alignTop="@id/tv_tile_title"
        android:layout_marginStart="@dimen/spacing_2x"
        android:tint="@color/colorIconDisabled"
        tools:src="@drawable/ic_place_near_me_24px" />

    <TextView
        android:id="@+id/tv_tile_title"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_9x"
        android:layout_marginEnd="@dimen/spacing_2x"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        tools:text="Date and time" />

    <TextView
        android:id="@+id/tv_tile_text_first"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tile_title"
        android:layout_marginStart="@dimen/spacing_9x"
        android:layout_marginTop="@dimen/spacing_05x"
        android:layout_marginEnd="@dimen/spacing_2x"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorTextSecondary"
        tools:text="03/30/2019 at 12:34 pm" />

    <TextView
        android:id="@+id/tv_tile_text_second"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tile_text_first"
        android:layout_marginStart="@dimen/spacing_9x"
        android:layout_marginTop="@dimen/spacing_05x"
        android:layout_marginEnd="@dimen/spacing_2x"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorTextSecondary"
        tools:text="2 days ago" />
</RelativeLayout>