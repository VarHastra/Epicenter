<resources>

    <!-- Main application theme -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="colorAlert0">@color/colorAlert0</item>
        <item name="colorAlert1">@color/colorAlert1</item>
        <item name="colorAlert2">@color/colorAlert2</item>
        <item name="colorAlert3">@color/colorAlert3</item>
        <item name="colorAlert4">@color/colorAlert4</item>
        <item name="colorAlert5">@color/colorAlert5</item>
        <item name="colorAlert6">@color/colorAlert6</item>
        <item name="colorAlert7">@color/colorAlert7</item>
        <item name="colorAlert8">@color/colorAlert8</item>
        <item name="colorAlert9">@color/colorAlert9</item>
        <item name="colorTsunami">@color/colorTsunami</item>

        <item name="colorIconActive">?colorControlNormal</item>
        <item name="colorIconInactive">?android:textColorHint</item>
        <item name="colorIconDim">@color/colorIconSheer</item>

        <item name="colorDanger">@color/colorDanger</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:statusBarColor">@color/colorSurfaceDark</item>
    </style>


    <!-- Main theme overlays -->
    <style name="AppThemeOverlay" parent="AppTheme" />

    <style name="AppThemeOverlay.PrimaryAsSecondary">
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
    </style>

    <style name="AppThemeOverlay.Alert0">
        <item name="colorPrimary">@color/colorAlert0</item>
        <item name="colorOnPrimary">#FFF</item>
    </style>

    <style name="AppThemeOverlay.Alert2">
        <item name="colorPrimary">@color/colorAlert2</item>
        <item name="colorOnPrimary">#FFF</item>
    </style>

    <style name="AppThemeOverlay.Alert4">
        <item name="colorPrimary">@color/colorAlert4</item>
        <item name="colorOnPrimary">#FFF</item>
    </style>

    <style name="AppThemeOverlay.Alert5">
        <item name="colorPrimary">@color/colorAlert5</item>
        <item name="colorOnPrimary">#FFF</item>
    </style>

    <style name="AppThemeOverlay.Alert6">
        <item name="colorPrimary">@color/colorAlert6</item>
        <item name="colorOnPrimary">#FFF</item>
    </style>

    <style name="AppThemeOverlay.Alert7">
        <item name="colorPrimary">@color/colorAlert7</item>
        <item name="colorOnPrimary">#FFF</item>
    </style>

    <style name="AppThemeOverlay.Alert8">
        <item name="colorPrimary">@color/colorAlert8</item>
        <item name="colorOnPrimary">#FFF</item>
    </style>

    <style name="AppThemeOverlay.Alert9">
        <item name="colorPrimary">@color/colorAlert9</item>
        <item name="colorOnPrimary">#FFF</item>
    </style>


    <!-- Styles of individual components -->
    <style name="SelectableChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_bg_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipIconTint">@color/chip_text_color</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body2.Secondary">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="SelectableChip.OpaqueSelection">
        <item name="chipBackgroundColor">@color/opaque_chip_bg_color</item>
        <item name="android:textColor">@color/opaque_chip_text_color</item>
        <item name="chipIconTint">@color/opaque_chip_text_color</item>
    </style>

    <style name="Widget.AppCompat.SeekBar.Primary">
        <item name="android:progressBackgroundTint">?colorPrimary</item>
        <item name="android:progressTint">?colorPrimary</item>
        <item name="android:thumbTint">?colorPrimary</item>
    </style>

    <style name="ClusterIconTextAppearance">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
