<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_dropdown_toolbar"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="?android:selectableItemBackgroundBorderless"
        android:drawableEnd="@drawable/ic_dropdown_arrow_24dp"
        android:drawablePadding="@dimen/spacing_1x"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/spacing_05x"
        android:paddingBottom="@dimen/spacing_05x"
        android:visibility="visible"
        tools:text="Current location" />

    <TextView
        android:id="@+id/tv_title_toolbar"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        tools:text="Title" />
</FrameLayout>