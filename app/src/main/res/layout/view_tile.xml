<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/bg_surface_clickable"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_tile_icon"
        android:layout_width="@dimen/size_icon_normal"
        android:layout_height="@dimen/size_icon_normal"
        android:layout_alignTop="@id/tv_tile_title"
        android:layout_marginStart="@dimen/spacing_2x"
        android:tint="@color/colorIconDisabled"
        tools:src="@drawable/ic_datetime_white_24px" />

    <TextView
        android:id="@+id/tv_tile_title"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_9x"
        android:layout_marginEnd="@dimen/spacing_2x"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        tools:text="DYFI reports" />

    <TextView
        android:id="@+id/tv_tile_text"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tile_title"
        android:layout_marginStart="@dimen/spacing_9x"
        android:layout_marginTop="@dimen/spacing_05x"
        android:layout_marginEnd="@dimen/spacing_2x"
        android:autoLink="all"
        android:ellipsize="end"
        android:linksClickable="false"
        android:maxLines="1"
        android:textColor="@color/colorTextSecondary"
        android:textColorLink="@color/colorTextLink"
        tools:text="5" />

</RelativeLayout>